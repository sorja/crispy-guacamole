{% block leftnav %}

<aside class="menu">
  <!-- card -->
  <div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        {% if user['avatar'] %}
          <img class="" src="{{url_for('static', filename='uploads/avatars/'+user['avatar'])}}" alt="avatar" />
        {% else %}
          <img class="" src="{{url_for('static', filename='img/no_avatar.png')}}" alt="avatar" />
        {% endif %}
      </figure>
      {% if current_user.id == user.id and request.endpoint == 'profile' %}
      <!-- CHANGE  AVATAR -->
        <a style="width:100%" id="change_avatar" class="button">Change avatar</a>
      <!-- /CHANGE AVATAR -->
      {% endif %}
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-32x32">
            {% if user['avatar'] %}
              <img class="" src="{{url_for('static', filename='uploads/avatars/'+user['avatar'])}}" alt="avatar" />
            {% else %}
              <img class="" src="{{url_for('static', filename='img/no_avatar.png')}}" alt="avatar" />
            {% endif %}
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-5">{{user['full_name']|e}}</p>
          <p class="subtitle is-6"><a href="mailto:{{user['email']}}">{{user['full_name']|e}}</a></p>
        </div>
      </div>
      <div class="content">
        {% if user['description']%}
          {{user['description']}}
        {% else%}
            no description :(
        {% endif %}
        <br>
        <small>{{user.timestamp}}</small>
      </div>
    </div>
  </div>
  <!-- /card -->
  <!-- menu -->
  <p class="menu-label">
    General
  </p>
  <ul class="menu-list">
    <li><a class="is-active" href="/frontpage">Feed</a></li>
    <li><a href="/profile">Me</a></li>
  </ul>
  <p class="menu-label">
    Settings
  </p>
  <ul class="menu-list">
    <li><a href="/settings">Settings</a></li>
    <li><a href="#">Privacy</a></li>
  </ul>
  <!-- /menu -->
</aside>

{% endblock %}
